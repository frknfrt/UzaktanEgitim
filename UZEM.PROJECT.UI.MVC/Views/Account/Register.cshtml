
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutSignin.cshtml";
}

@model UserClass
<br />
<div class="col-lg-12">
    <div class="col-lg-9">
        <div class="panel panel-danger" style="margin-left:30%;background:#eeecec">
            <div class="panel-heading">
                <h3 class="alert alert-primary" style="text-align:center">Sign In</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <fieldset>
                        <p>
                            <label style="margin-left:10%">First Name:</label>
                            <input type="text" name="FirstName" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>
                        <p>
                            <label style="margin-left:10%">Last Name:</label>
                            <input type="text" name="LastName" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>
                        <p>
                            <label style="margin-left:10%">Email:</label>
                            <input type="email" name="Email" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>
                        <p>
                            <label style="margin-left:10%">Password:</label>
                            <input type="password" id="password" name="Password" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>
                        <p>
                            <label style="margin-left:10%">Repeat Password:</label>
                            <input type="password" id="repeatpassword" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>
                        <br />
                        <p>
                            <input type="submit" id="save" value="Save" class="btn btn-success btn-lg" style="margin-left:75%" />
                        </p>
                    </fieldset>
                }
            </div>
            <div class="panel-footer">
                @if (ViewBag.Error != null)
                {
                    <span>@ViewBag.Error</span>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#repeatpassword').keyup(function () {
            if ($('#password').val() != $('#repeatpassword').val()) {
                $(':input[type="submit"]').prop('disabled', true);                
                } 
            else {
                 $(':input[type="submit"]').prop('disabled', false); 
            }
        });
    });
    </script>
}
