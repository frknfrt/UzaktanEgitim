
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@model UserClass
    <br />
<div class="col-lg-12" >
    <div class="col-lg-9">
        <div class="panel panel-danger" style="margin-left:30%;background:#eeecec">
            <div class="panel-heading">
                <h3 class="alert alert-primary" style="text-align:center" >Login</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <fieldset>
                        <p>
                            <label style="margin-left:10%">Email:</label>
                            <input type="email" name="Email" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>
                        <p>
                            <label style="margin-left:10%">Password:</label>
                            <input type="password" name="Password" class="form-control" style="width:80%;margin-left:10%" required>
                        </p>

                        <br />
                        <p>
                            <input type="submit" name="name" value="Login" class="btn btn-success btn-lg" style="margin-left:75%"/>                          
                        </p>
                    </fieldset>
                }
            </div>
            <div class="panel-footer">
                @if (ViewBag.Error != null)
                {
                    <span>@ViewBag.Error</span>
                }
            </div>
        </div>
    </div>
</div>
